<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:background="@color/blue"
            android:gravity="left"
            android:text="Contact"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:onClick="home"
        android:src="@drawable/home" />

    <RelativeLayout
        android:id="@+id/Rel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:background="@color/blue"
        android:paddingTop="2dp" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="15dp"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/icon"
            android:paddingTop="15dp"
            android:text="Example application"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_below="@id/textView_name"
            android:layout_toRightOf="@id/icon"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="12sp" />
        <ImageButton
            android:id="@+id/image_button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00ffffff"
            android:src="@drawable/save" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Rel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rel2"
        android:background="@color/black"
        android:paddingTop="2dp" >

        <ImageView
            android:id="@+id/phoneimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="5dp"
            android:src="@drawable/phone" />

        <ImageView
            android:id="@+id/mailimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/phoneimg"
            android:contentDescription="TODO"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:src="@drawable/mail" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneimg"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"
            android:gravity="left"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Details"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Rel3"
        android:background="@color/white"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/textView31"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="First Name"
            android:textColor="@color/dgrey"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText_first_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView31"
            android:singleLine="true"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/editText_first_name"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_first_name"
            android:ellipsize="marquee"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Last Name"
            android:textColor="@color/dgrey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText_last_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView32"
            android:singleLine="true"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/editText_last_name"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_last_name"
            android:ellipsize="marquee"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Phone"
            android:textColor="@color/dgrey"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView33"
            android:singleLine="true"
            android:text="phone"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@id/editText_phone"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_phone"
            android:ellipsize="marquee"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Email"
            android:textColor="@color/dgrey"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView34"
            android:singleLine="true"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
